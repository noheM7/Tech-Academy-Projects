@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    #train {
        position: relative;
        cursor: pointer;
    }
</style>

<img id="train" src="https://js.cx/clipart/train.gif">



<script>
    train.onclick = function () {
        let start = Date.now();

        let timer = setInterval(function () {
            let timePassed = Date.now() - start;

            train.style.left = timePassed / 3 + 'px';

            if (timePassed > 2000) clearInterval(timer);

        }, 20);
    }
</script>

<div class="text-center">
    <h1 class="display-4">Click Train</h1>
    <iframe width="353" height="380" src="https://www.youtube.com/embed/xpVfcZ0ZcFM" title="Drake - God&#39;s Plan" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>

